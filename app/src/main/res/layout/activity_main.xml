<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnShowStatusbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:text="@string/show_status_bar"
        app:layout_constraintEnd_toStartOf="@+id/btnHideStatusbar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHideStatusbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hide_status_bar"
        app:layout_constraintBottom_toBottomOf="@+id/btnShowStatusbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnShowStatusbar" />

    <Button
        android:id="@+id/btnShowNavigationbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_navigation_bar"
        app:layout_constraintBottom_toTopOf="@+id/btnHideNavigationbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShowStatusbar" />

    <Button
        android:id="@+id/btnHideNavigationbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hide_navigation_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShowNavigationbar" />

</androidx.constraintlayout.widget.ConstraintLayout>